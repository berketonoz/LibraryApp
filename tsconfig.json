{
  "compilerOptions": {
    "target": "ES2017",                         // Specify ECMAScript target version
    "module": "commonjs",                       // Use CommonJS module system
    "outDir": "./build",                        // Redirect output structure to the 'build' directory
    "rootDir": "./src",                         // Specify the root directory of input files
    "strict": true,                             // Enable all strict type-checking options
    "moduleResolution": "node",                 // Use Node.js module resolution
    "esModuleInterop": true,                    // Enables emit interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,   // Disallow inconsistently-cased references to the same file
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "noEmit": true,                            // Do not emit output files
    "allowImportingTsExtensions": true          // Allow importing TypeScript files without specifying the extension
  },
  "include": ["src"],                           // Include all TypeScript files in 'src' directory
  "exclude": ["node_modules"]                   // Exclude the 'node_modules' directory
}
